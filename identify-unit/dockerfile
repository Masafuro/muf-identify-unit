FROM python:3.11-alpine

# ScyllaDBドライバ(cassandra-driver)のビルドに必要な依存パッケージをインストール
# python-multipart は FastAPI で Form データを受け取るために必要
RUN apk add --no-cache --virtual .build-deps \
    gcc \
    libc-dev \
    libffi-dev \
    make \
    linux-headers \
    && pip install --no-cache-dir \
    redis \
    fastapi \
    uvicorn \
    jinja2 \
    cassandra-driver \
    python-dotenv \
    python-multipart \
    && apk del .build-deps

WORKDIR /app

# 標準出力のバッファリング無効化と、MUFおよびユニット本体へのパスを通す
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app/muf:/app

# コンテナ起動時にFastAPIを起動
CMD ["uvicorn", "identify-unit.main:app", "--host", "0.0.0.0", "--port", "8000"]