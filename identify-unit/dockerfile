# identify-unit/Dockerfile

FROM python:3.11-alpine

# ScyllaDBドライバ、Pillow、および bcrypt のビルドに必要な依存パッケージをインストール
# zlib-dev, jpeg-dev は qrcode[pil] の画像生成に必須
# bcrypt のビルドには gcc, libc-dev, libffi-dev 等が必要です
RUN apk add --no-cache --virtual .build-deps \
    gcc \
    libc-dev \
    libffi-dev \
    make \
    linux-headers \
    zlib-dev \
    jpeg-dev \
    && pip install --no-cache-dir \
    redis \
    fastapi \
    uvicorn \
    jinja2 \
    cassandra-driver \
    python-dotenv \
    python-multipart \
    pyotp \
    qrcode[pil] \
    passlib \
    "bcrypt<4.0.0" \
    && apk del .build-deps

# 実行時に画像処理で必要となるランタイムライブラリを追加
RUN apk add --no-cache zlib jpeg

WORKDIR /app

# 標準出力のバッファリング無効化と、MUFおよびユニット本体へのパスを通す
ENV PYTHONUNBUFFERED=1
ENV PYTHONPATH=/app/muf:/app

# 起動ポートの設定
ENV APP_PORT=8000

# コンテナ起動時にFastAPIを起動
CMD ["sh", "-c", "uvicorn identify-unit.main:app --host 0.0.0.0 --port $APP_PORT"]